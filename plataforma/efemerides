</head>

<body class="bg-yellow-50 text-gray-800 font-sans min-h-screen flex flex-col justify-between">

  <div class="text-center mt-10">
    <img src="https://cdn-icons-png.flaticon.com/512/1995/1995507.png" alt="Efem√©rides" class="mx-auto w-20 mb-4">
    <h1 class="text-3xl font-bold italic">Efem√©rides de Hoy</h1>
  </div>

  <div id="efemerides" class="max-w-lg mx-auto mt-8 bg-white p-6 rounded-xl shadow-md text-center text-lg">
    <p class="text-gray-600">Cargando datos...</p>
  </div>

  <div class="bg-gray-800 text-white text-center py-4 mt-10 text-sm font-semibold">
    ESPACIO CULTURAL Y EDUCATIVO COMUNITARIO <br>
    <span class="text-xs">Basado en registros locales.</span>
  </div>

  <script>
    const SHEET_URL = "TU_URL_EXEC_AQUI";

    function mostrarError(msg) {
      document.getElementById('efemerides').innerHTML = `
        <div style="padding:10px; color:red; background:#fee; border:1px solid #f00;">
          ‚ö†Ô∏è ${msg}
        </div>`;
    }

    function capitalizar(str) {
      return str.charAt(0).toUpperCase() + str.slice(1);
    }

    fetch(SHEET_URL)
      .then(res => res.json())
      .then(data => {
        if (data.error || !data.evento) {
          mostrarError(data.error || "No hay efem√©rides para hoy.");
          return;
        }

        const fecha = new Date(data.fecha);
        const opciones = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        let fechaStr = capitalizar(fecha.toLocaleDateString('es-AR', opciones));

        document.getElementById('efemerides').innerHTML = `
          <div class="space-y-3 text-left">
            <p>üìÖ ${fechaStr}</p>
            <p>üéâ ${data.evento}</p>
            ${data.detalle ? `<p>üìù ${data.detalle}</p>` : ""}
          </div>
        `;
      })
      .catch(error => {
        mostrarError("Error al conectar con el servidor.");
        console.error(error);
      });
  </script>

</body>
</html>
